<h1>Listing Albums</h1>
 
<%= link_to 'Add new album', new_album_path %>

<table>
  <tr>
    <th>Artist</th>
    <th>Album title</th>
    <th>Year released</th>
    <th>Genre</th>
    <th colspan="3">Actions</th>
  </tr>
 
  <% @albums.each do |album| %>
    <tr>
      <td><%= album.artist %></td>
      <td><%= album.album_title %></td>
      <td><%= album.year_released %></td>
      <td><%= album.genre %></td>
      <td><%= link_to 'Show', album_path(album) %></td>
      <td><%= link_to 'Edit', edit_album_path(album) %></td>
      <td><%= link_to 'Destroy', album_path(album),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>